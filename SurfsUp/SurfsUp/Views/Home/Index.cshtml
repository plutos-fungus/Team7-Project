@model IEnumerable<SurfsUp.Models.Surfboard>
@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="text-center">
        <h1 class="display-4">Surfboards</h1>
        <p><a href="/Surfboards"></a></p>
    </div>
    <div>
        <input type="button" value="Search" style="float: right;" />
        <input style="float: right;"></input>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-2">
        <div>
            <h5>Price</h5>
            <div class="form-group">
                <label>Max price</label>
                <input class="form-control" />

            </div>
            <div class="form-group">
                <label>Min price</label>
                <input class="form-control" />
            </div>
            <br />
            <select style="width: 100%"> 
                Sort by Price
                <option value="PDefault">Sort by price</option>
                <option value="Ascending">Ascending</option>
                <option value="Descending">Descending</option>
            </select>
        </div>
        <div>
            <h5>Boardtype</h5>
            <div class="form-group">
                <select style="width: 100%" asp-items="@Html.GetEnumSelectList<Surfboard.BoardTypes>()">
                    <option value="SBDefault">Boardtype</option>
                </select>
                @*<span asp-validation-for="BoardType" class="text-danger"></span>*@
            </div>
        </div>
                
    </div>
    <div class="col-10">
        <div class="text-center">

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BoardType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Length)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Width)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Thickness)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Volume)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EquipmentTypes)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Image)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BoardType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Length)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Width)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Thickness)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Volume)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EquipmentTypes)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Image)
                            </td>
                            <td>
                                <a href="@Url.Action("Create", "Rentals", new { id = item.ID})">Rent</a> |
                                <a href="@Url.Action("Details", "Surfboards", new { id = item.ID})">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>