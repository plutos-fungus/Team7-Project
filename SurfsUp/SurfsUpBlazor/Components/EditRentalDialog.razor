@inject HttpClient Http;
@using SurfsUpLibrary;

<div class="modal fade show" id="myModal" style="display:block; background-color: rgba(10,10,10,.8);" aria-modal="true" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Edit Rental</h4>
                <button type="button" class="close" @onclick="@ModalCancel">&times;</button>
            </div>
            <div class="modal-body">
                <label>ID</label>
                <input type="number" @bind="Rent.ID" disabled="disabled"/>
                <br />
                <label>EndDate</label>
                <input type="datetime" @bind="Rent.EndDate"/>
                <br />
                <label>Email</label>
                <input type="text" @bind="Rent.EndDate"/>
                <br />
                <label>Surfboard ID</label>
                <input type="number" @bind="Rent.SurfboardID" disabled="disabled"/>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" @onclick="@ModalOk">Edit</button>
                <button type="button" class="btn btn-primary" @onclick="@ModalCancel">Cancel</button>
            </div>
        </div>
    </div>
</div>


@code {
    [Parameter]
    public Rental Rent { get; set; }

    [Parameter]
    public EventCallback<bool> OnClose { get; set; }

    private Task ModalCancel()
    {
        return OnClose.InvokeAsync(false);
    }

    private Task ModalOk()
    {
        //Add code to put changes to api
        return OnClose.InvokeAsync(true);
    }
}